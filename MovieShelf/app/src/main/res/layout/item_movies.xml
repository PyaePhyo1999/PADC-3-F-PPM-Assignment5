<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:weightSum="3"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_movie_one"
            android:layout_width="140dp"
            android:layout_height="220dp"
            android:src="@drawable/img_movie_one" />

        <ImageButton
            android:id="@+id/ib_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_movie_one"
            android:layout_alignRight="@id/iv_movie_one"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:background="@color/primary_text"
            android:src="@drawable/ic_fullscreen_black_24dp"
            android:tint="@color/icons">

        </ImageButton>

        <TextView
            android:id="@+id/tv_movie_one_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_movie_one"
            android:text="Thor:Ragnarok"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_movie_one_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_movie_one_name"
            android:layout_below="@id/tv_movie_one_name"
            android:text="(Action,Science Fiction,Adventure,Fantasy)"
            android:textColor="@color/primary_text"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_movie_one_current_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_movie_one_name"
            android:layout_below="@id/tv_movie_one_type"
            android:layout_marginTop="8dp"
            android:text="Current Popularity"
            android:textColor="@color/primary_text"
            android:textSize="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_favorite_black_45dp"
            android:backgroundTint="@color/primary_light"
            android:gravity="center"
            android:text="8.5"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="italic" />


        <RatingBar
            android:id="@+id/rb_star_rating"
            style="?attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_movie_one_name"
            android:layout_below="@id/tv_movie_one_current_popularity"
            android:layout_marginTop="4dp"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1.0" />

        <Button
            android:id="@+id/btn_movie_one_movie_overview"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_movie_one"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_button"
            android:foreground="@drawable/ripple_white"
            android:text="Movie Overview"
            android:textAllCaps="false"
            android:textColor="@color/primary_light" />

    </RelativeLayout>

</android.support.v7.widget.CardView>





